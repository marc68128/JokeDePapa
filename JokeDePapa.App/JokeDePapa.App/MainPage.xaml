<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:JokeDePapa.App"
             x:Class="JokeDePapa.App.MainPage">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" Margin="20">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>
      
      <Label Grid.Row="0" FontSize="30" x:Name="QuestionLabel" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black" Text="{Binding Question}"></Label>
      <Label Grid.Row="1" FontSize="30" x:Name="AnswerLabel" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black" Text="{Binding Answer}"></Label>
    </Grid>

    <Label Grid.Row="0" FontSize="30" x:Name="SentenceLabel" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="20" TextColor="Black" Text="{Binding Sentence}"></Label>
    
    <Button Grid.Row="1" Text="SUIVANTE" Command="{Binding NextJokeCommand}"  StyleClass="Large"></Button>
  </Grid>

</ContentPage>